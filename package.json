{
  "name": "blocks",
  "version": "0.1.0",
  "description": "A flexible block-based markup language",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "blocks": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./preprocessor": {
      "import": "./dist/preprocessor/index.js",
      "types": "./dist/preprocessor/index.d.ts"
    },
    "./preprocessor/browser": {
      "import": "./dist/preprocessor/browser.js",
      "types": "./dist/preprocessor/browser.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev:playground": "vite playground.html --open --port 3000",
    "build": "tsc && vite build",
    "build:playground": "pnpm build && vite build --config vite.playground.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit && biome check .",
    "lint:biome": "biome check .",
    "lint:biome:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "parser",
    "chevrotain",
    "markup",
    "blocks",
    "block-language",
    "markdown-alternative",
    "ast"
  ],
  "blockLanguage": {
    "fileExtension": ".blocks",
    "extensions": [
      ".blocks"
    ],
    "mimeType": "text/x-blocks"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chevrotain": "^11.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  }
}
