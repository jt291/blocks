{
  "name": "blocks",
  "version": "0.1.0",
  "description": "A flexible block-based markup language",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:playground": "tsc && vite build && vite build --config vite.playground.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "parser",
    "chevrotain",
    "markup",
    "blocks",
    "block-language",
    "markdown-alternative",
    "ast"
  ],
  "blockLanguage": {
    "fileExtension": ".block",
    "extensions": [".block"],
    "mimeType": "text/x-blocks"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chevrotain": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  }
}
